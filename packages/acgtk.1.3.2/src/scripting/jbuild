;; -*-lisp-*-

(jbuild_version 1)

;; This declares the acgc executable implemented by acg.ml
(executable
 ((name acg)
  (public_name acg)
  (package acgtk)
  (flags (:standard -w -58))
  (libraries (
	      threads
	      cairo2
	      ocf
	      utilsLib
	      acgData
	      grammars
	      ))))

(rule
  ((targets (script_parser.ml))
   (deps    (script_parser.dyp))
   (action  (chdir ${ROOT} (run ${bin:dypgen} --noemit-token-type --no-pp --no-obj-type --no-mli ${<}))))
  )

(ocamllex (script_lexer))
