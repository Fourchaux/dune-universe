  (* ------------------------------------------------------------------------ *)
  val function cmp t t : bool
  (* ------------------------------------------------------------------------ *)
  val function view_to_list view collection : list t
  (* ------------------------------------------------------------------------ *)
  val function list_to_view (list t) : view

  (* ------------------------------------------------------------------------ *)
