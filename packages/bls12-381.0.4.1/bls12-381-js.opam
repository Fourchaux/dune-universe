opam-version: "2.0"
authors: [ "Danny Willems <be.danny.willems@gmail.com>" ]
maintainer: [ "Danny Willems <be.danny.willems@gmail.com>" ]
synopsis: "JavaScript version of BLS12-381 primitives implementing the virtual
package bls12-381"
description: "JavaScript version of BLS12-381 primitives implementing the virtual
package bls12-381"
homepage: "https://gitlab.com/dannywillems/ocaml-bls12-381"
dev-repo: "git+https://gitlab.com/dannywillems/ocaml-bls12-381.git"
bug-reports: "https://gitlab.com/dannywillems/ocaml-bls12-381/issues"
license: "MIT"
depends: [
  "ocaml" {>= "4.08" & < "4.12"}
  "dune" {>= "2.7"}
  "bls12-381-gen" {= version}
  "bls12-381" {= version}
  "bls12-381-js-gen" {= version}
  "js_of_ocaml" { >= "3.7.1"}
  "js_of_ocaml-compiler" { >= "3.7.1" }
  "js_of_ocaml-ppx" { >= "3.7.1" }
  # Commenting for the moment because ff-pbt does require
  # Alcotest, and Alcotest is not JavaScript compatible yet
  # "ff-pbt" {>= "0.6.1" & < "0.7.0" & with-test}
  "alcotest" {with-test}
  # Used by intermediary packages but only used by tests in this package.
  "zarith" {>= "1.10" & < "2.0" & with-test}
  "zarith_stubs_js" {with-test}
  "conf-npm" {with-test}
  # The constraint < 2.6 is a temporary fix because there is a circular
  # dependency between ocamlformat, odoc and bisect_ppx 2.6.0
  "bisect_ppx" {with-test & < "2.6.0"}
]
build: [[ "dune" "build" "-j" jobs "-p" name "@install" ]]
run-test: [[ "dune" "runtest" "-p" name "-j" jobs ]]
