(package
         (name boltzgen)
         (synopsis "Generate tests using boltzman sampling")
         (description "BoltzGen is a tool to generate tests. Given a function signature it generates a random set of call of this function on generated random input. Inputs are generated using a Boltzmann sampler.")
         (depends (ocaml (>= 4.08.0)) ocaml-compiler-libs (cmdliner (>= 1.0.0)) base-unix)

)
