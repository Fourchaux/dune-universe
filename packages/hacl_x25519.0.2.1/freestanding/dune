(copy_files#
 (alias install)
 (files ../src/*.c))

(copy_files#
 (alias install)
 (files ../src/*.h))

(rule
 (deps Makefile)
 (targets libhacl_x25519_freestanding_stubs.a)
 (action
  (no-infer
   (progn
    (run %{make})))))

(install
 (package hacl_x25519)
 (section lib)
 (files libhacl_x25519_freestanding_stubs.a))
