node even_times_3 (i : int; c : bool) returns (o: int)
var cpt: int;
let
  automaton
  initial state EVEN
  unless if c resume ODD ;
  let
     automaton
     initial state first_EVEN
     let
       o = 100;
     tel
     until if true resume other_EVEN ;

     state other_EVEN
     let
       o = i + 1 ;
     tel
  tel

  state ODD
  unless if c restart EVEN ;
  let
    automaton
    initial state first_ODD
    let
      o = 203;
    tel
    until if true resume other_ODD ;

    state other_ODD
    let
      o = -2 * i ;
    tel
  tel

  returns ..;

  cpt = 0 -> pre cpt + 1;

  --%PROPERTY cpt > 1 => o > i;
tel
