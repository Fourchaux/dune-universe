(alias
 (name   runtest)
 (deps   (:x section.md) (:y section.md.expected) (package mdx))
 (action (progn
           (run mdx test -s Testing %{x})
           (diff? %{y} %{x}.corrected))))

(alias
 (name   runtest)
 (deps   (:x labels.md) (:y labels.md.expected) (package mdx))
 (action (progn
           (run mdx test -s Testing %{x})
           (diff? %{y} %{x}.corrected))))

