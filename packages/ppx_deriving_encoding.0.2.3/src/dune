(* -*- tuareg -*- *)

let () =
  let cmd = "ocamlfind query -format %v ppxlib" in
  let omp = match Jbuild_plugin.V1.run_and_read_lines cmd with
    | [] | _ :: _ :: _ -> failwith "no ppxlib installed"
    | [ version ] ->
      match String.split_on_char '.' version with
      | [ major; minor; _ ] ->
        if int_of_string major > 0 then 2
        else if int_of_string minor > 15 then 2
        else 1
      | _ -> failwith ("version " ^ version ^ " not understood") in
  Printf.kprintf
    Jbuild_plugin.V1.send
    "(library
     (public_name ppx_deriving_encoding)
     (name ppx_deriving_encoding)
     (kind ppx_deriver)
     (modules compat utils encoding ppx_deriving_encoding)
     (libraries ppxlib (select compat.ml from (-> compat.%d.ml)))
     (ppx_runtime_libraries json-data-encoding))"
    omp
