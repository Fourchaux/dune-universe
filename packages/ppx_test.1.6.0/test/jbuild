(executables
 ((names (test1 test2 test3 fail))
  (link_flags (-linkall))
  (preprocess (pps (ppx_test.ppx)))
  (libraries ( ppx_test.runtime ))))

(alias
 ((name runtest)
  (deps (test1.exe test2.exe test3.exe fail.exe))
  (action (progn
	    (run ${SCOPE_ROOT}/test/test1.exe)
	    (run ${SCOPE_ROOT}/test/test2.exe)
	    (run ${SCOPE_ROOT}/test/test3.exe)
	    (run ${SCOPE_ROOT}/test/fail.exe)
	    ))))
